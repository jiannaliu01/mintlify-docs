{
  "openapi": "3.1.0",
  "info": {
    "title": "Cardinal Process API",
    "description": "API to convert PDF pages into clean, structured Markdown.",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://async-cardinal-api-382401401043.us-central1.run.app"
    }
  ],
  "paths": {
    "/process": {
      "post": {
        "summary": "Process a file",
        "description": "Upload or reference a PDF/image and convert it into structured Markdown.",
        "security": [
          {
            "apiKeyAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "file": {
                    "type": "string",
                    "format": "binary",
                    "description": "PDF or image file to upload"
                  },
                  "fileUrl": {
                    "type": "string",
                    "description": "URL to the PDF or image file to process"
                  },
                  "post_processing_on": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable or disable post-processing"
                  },
                  "start_page": {
                    "type": "integer",
                    "default": 1,
                    "description": "Starting page number"
                  },
                  "ephemeral": {
                    "type": "boolean",
                    "default": false,
                    "description": "If true, results are not stored in S3"
                  }
                },
                "oneOf": [
                  {
                    "required": [
                      "file"
                    ]
                  },
                  {
                    "required": [
                      "fileUrl"
                    ]
                  }
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Processed Markdown response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "markdown": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid request"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "apiKeyAuth": {
        "type": "apiKey",
        "in": "header",
        "name": "x-api-key"
      }
    }
  }
}